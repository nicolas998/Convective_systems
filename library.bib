issn = {10275606},
journal = {Hydrology and Earth System Sciences},
number = {11},
pages = {4375--4386},
title = {{Estimation of antecedent wetness conditions for flood modelling in northern Morocco}},
volume = {16},
year = {2012}
}
@article{Hardy2016,

title = {{Organization and Environmental Properties of Extreme-Rain-Producing Mesoscale Convective Systems}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/MWR2899.1},
volume = {133},
year = {2005}
}
@article{Seluchi2006,
abstract = {The Andes Cordillera produces a significant disruption to the structure$\backslash$nand evolution of the weather systems that cross South America. In$\backslash$nparticular, cold fronts tend to be ``channeled{\{}''{\}} to the north$\backslash$nimmediately to the east of the Andes, fostering the advance of cold air$\backslash$nincursions (cold surges) well into subtropical, and sometimes tropical,$\backslash$nlatitudes. In contrast, active cold fronts hardly reach subtropical$\backslash$nlatitudes along the western side of the Andes (Pacific sea border).$\backslash$nInstead, as a cold front moves equatorward along the east side of the$\backslash$nAndes, a marked low-level warming tends to appear along the west side of$\backslash$nthe subtropical Andes, leading to the formation of a mesoscale coastal$\backslash$nlow (or trough) in this region. To further understand the processes that$\backslash$nlead to a contrasting evolution of the cold front at each side of the$\backslash$nAndes, a typical frontal passage is studied in this work, using synoptic$\backslash$nobservations and a regional model {\{}[{\}}Eta-Centro de Previsao de Tempo e$\backslash$nEstudos Climaticos (CPTEC)] simulation.$\backslash$nThe passage of the postfrontal anticyclone over southern South America$\backslash$nproduces a poleward-pointing pressure gradient and, hence, geostrophic$\backslash$neasterly flow at low levels. The tall and steep mountains block the$\backslash$nflow, leading to a very small zonal wind component close to the slopes.$\backslash$nConvergence (divergence) of the zonal flow to the east (west) of the$\backslash$nsubtropical Andes is largely compensated for by upward (downward)$\backslash$nmotion, and the associated cooling (warming) over this region. The weak$\backslash$nzonal wind component near the Andes also breaks down the geostrophic$\backslash$nbalance over this region, giving rise to an acceleration of the$\backslash$nsoutherly winds (i.e., along-barrier flow) and the consequent increase$\backslash$nin cold advection. Therefore, to the cast of the subtropical Andes both$\backslash$nhorizontal and vertical advection cool the lower troposphere, fostering$\backslash$nthe equatorward propagation of the cold front. To the west of the Andes,$\backslash$nhorizontal advection is largely offset by the strong warming associated$\backslash$nwith the enhanced subsidence over that region hindering the advance of$\backslash$nthe cold front into subtropical latitudes.},
author = {Seluchi, Marcelo E. and Garreaud, Ren{\'{e}}D. and Norte, Federico a. and Saulo, a. Celeste},
doi = {10.1175/MWR3247.1},
file = {:home/nicolas/Dropbox/Coleccion{\_}articulos/Orografia/seluchi2006.pdf:pdf},

publisher = {Elsevier B.V.},
title = {{Investigating the role of geology in the hydrological response of Mediterranean catchments prone to flash-floods: Regional modelling study and process understanding}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2016.04.001},
volume = {541},

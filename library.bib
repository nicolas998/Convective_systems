doi = {10.5194/hess-8-891-2004},
issn = {1607-7938},
journal = {Hydrology and Earth System Sciences Discussions},
keywords = {himalaya,low flows,recession curve,regionalisation,ungauged catchment,water resources},
number = {5},
pages = {891--902},
title = {{Recession-based hydrological models for estimating low flows in ungauged catchments in the Himalayas}},

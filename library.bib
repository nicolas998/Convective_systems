issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Extremes,Floods,GEV,Regional analysis,Statistics},
pages = {385--396},
publisher = {Elsevier B.V.},
title = {{Regional flood frequency analyses involving extraordinary flood events at ungauged sites: Further developments and validations}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2013.09.058},
volume = {508},
year = {2014}

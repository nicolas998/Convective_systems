arxivId = {arXiv:1011.1669v3},
author = {Houze, Robert A.},
doi = {10.1002/qj.49711548702},
eprint = {arXiv:1011.1669v3},
file = {:home/nicolas/Dropbox/Coleccion{\_}articulos/Flash{\_}Floods/houze1989.pdf:pdf},
isbn = {1477-870X},
issn = {1477870X},
journal = {Quarterly Journal of the Royal Meteorological Society},
number = {487},

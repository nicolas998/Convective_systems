file = {:home/nicolas/Dropbox/Coleccion{\_}articulos/WaterQuality/Wade2012.pdf:pdf},
issn = {10275606},
journal = {Hydrology and Earth System Sciences},
number = {11},
pages = {4323--4342},
title = {{Hydrochemical processes in lowland rivers: Insights from in situ, high-resolution monitoring}},

isbn = {0022-1694},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Automatic calibration,Conceptual model,Distributed hydrological model,Rainfall-runoff modelling,Split-parameter structure,temporal and spatial scale effects},
month = {jan},

issn = {00431397},
journal = {Water Resources Research},
keywords = {http://dx.doi.org/10.1029/2005WR004226, doi:10.102,reach morphology, classification, scaling, stream},
number = {6},
pages = {1--15},
title = {{Channel-reach morphology dependence on energy, scale, and hydroclimatic processes with implications for prediction using geospatial data}},

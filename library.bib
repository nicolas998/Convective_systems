@article{Penna2011,
abstract = {This study investigates the role of soil moisture on the threshold$\backslash$nrunoff response in a small headwater catchment in the Italian Alps that$\backslash$nis characterised by steep hillslopes and a distinct riparian zone. This$\backslash$nstudy focuses on: (i) the threshold soil moisture-runoff relationship$\backslash$nand the influence of catchment topography on this relation; (ii) the$\backslash$ntemporal dynamics of soil moisture, streamflow and groundwater that$\backslash$ncharacterize the catchment's response to rainfall during dry and wet$\backslash$nperiods; and (iii) the combined effect of antecedent wetness conditions$\backslash$nand rainfall amount on hillslope and riparian runoff. Our results$\backslash$nhighlight the strong control exerted by soil moisture on runoff in this$\backslash$ncatchment: a sharp threshold exists in the relationship between soil$\backslash$nwater content and runoff coefficient, streamflow, and hillslope-averaged$\backslash$ndepth to water table. Low runoff ratios were likely related to the$\backslash$nresponse of the riparian zone, which was almost always close to$\backslash$nsaturation. High runoff ratios occurred during wet antecedent$\backslash$nconditions, when the soil moisture threshold was exceeded. In these$\backslash$ncases, subsurface flow was activated on hillslopes, which became a major$\backslash$ncontributor to runoff. Antecedent wetness conditions also controlled the$\backslash$ncatchment's response time: during dry periods, streamflow reacted and$\backslash$npeaked prior to hillslope soil moisture whereas during wet conditions$\backslash$nthe opposite occurred. This difference resulted in a hysteretic$\backslash$nbehaviour in the soil moisture-streamflow relationship. Finally, the$\backslash$ninfluence of antecedent moisture conditions on runoff was also evident$\backslash$nin the relation between cumulative rainfall and total stormflow. Small$\backslash$nstorms during dry conditions produced low stormflow amounts, likely$\backslash$nmainly from overland flow from the near saturated riparian zone.$\backslash$nConversely, for rainfall events during wet conditions, higher stormflow$\backslash$nvalues were observed and hillslopes must have contributed to streamflow.},
author = {Penna, D. and {Tromp-Van Meerveld}, H. J. and Gobbi, a. and Borga, M. and {Dalla Fontana}, G.},

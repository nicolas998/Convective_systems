file = {:home/nicolas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Chen et al. - 2015 - East Asian summer monsoon precipitation variability since the last deglaciation.pdf:pdf},
isbn = {2045-2322},

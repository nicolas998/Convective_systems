isbn = {1027-5606},
issn = {10275606},
journal = {Hydrology and Earth System Sciences},
number = {10},
pages = {4209--4225},
title = {{Improving uncertainty estimation in urban hydrological modeling by statistically describing bias}},
volume = {17},
year = {2013}
}

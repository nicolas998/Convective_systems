issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Radar,Rainfall,Satellite,Typhoon Morakot},
pages = {4--13},
publisher = {Elsevier B.V.},
title = {{Performance evaluation of radar and satellite rainfalls for Typhoon Morakot over Taiwan: Are remote-sensing products ready for gauge denial scenario of extreme events?}},

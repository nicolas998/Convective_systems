journal = {Water Resources Research},
keywords = {http://dx.doi.org/10.1029/2010WR009827, doi:10.102},
number = {9},
pages = {1--16},
title = {{Pursuing the method of multiple working hypotheses for hydrological modeling}},
volume = {47},
year = {2011}
}

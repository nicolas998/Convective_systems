doi = {10.1016/j.jhydrol.2016.03.019},
file = {:home/nicolas/Dropbox/Coleccion{\_}articulos/Flash{\_}Floods/camarasabelmonte2016.pdf:pdf},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Ephemeral streams,Event,Flash flood,Mediterranean,Rainfall intensity,Semi-arid},
publisher = {Elsevier B.V.},
title = {{Flash floods in Mediterranean ephemeral streams in Valencia Region (Spain)}},

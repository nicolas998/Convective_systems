doi = {10.5194/nhess-12-1119-2012},
file = {:home/nicolas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Coustau et al. - 2012 - Flood modelling with a distributed event-based parsimonious rainfall-runoff model Case of the karstic Lez river.pdf:pdf},

keywords = {Bypassing flow,Catchment storage,Discharge sensitivity function,Hydrograph separation,Streamflow recession,Streamwater electrical conductivity},
pages = {794--808},
title = {{A catchment as a simple dynamical system: Characterization by the streamflow component approach}},

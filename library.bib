doi = {10.1016/j.jhydrol.2011.12.039},
isbn = {0022-1694},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Catchment scale,In situ measurements,Soil moisture,Spatial variability},
pages = {63--75},
publisher = {Elsevier B.V.},
title = {{Catchment scale soil moisture spatial-temporal variability}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2011.12.039},

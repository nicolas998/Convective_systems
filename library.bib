journal = {Advances in Water Resources},
keywords = {Baseflow calibration,CLM,Calibration,Coupled model,Equifinality,Groundwater model,Parameter interactions},
number = {12},
pages = {1552--1564},
publisher = {Elsevier Ltd},
title = {{Constraining water table depth simulations in a land surface model using estimated baseflow}},
url = {http://dx.doi.org/10.1016/j.advwatres.2008.06.007},
volume = {31},
year = {2008}
}

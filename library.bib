doi = {10.1016/j.jhydrol.2016.03.032},
file = {:home/nicolas/Dropbox/Coleccion{\_}articulos/Flash{\_}Floods/adamovic2016.pdf:pdf},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Data-driven distributed hydrological model,Flash floods,Mediterranean region,Simple dynamical systems approach},
pages = {173--189},
publisher = {Elsevier B.V.},
title = {{Development of a data-driven semi-distributed hydrological model for regional scale catchments prone to Mediterranean flash floods}},

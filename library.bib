doi = {10.5194/hessd-5-345-2008},
file = {:home/nicolas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Younis, Anquetin, Thielen - 2008 - The benefit of high-resolution operational weather forecasts for flash flood warning.pdf:pdf},

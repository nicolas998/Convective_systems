issn = {16125118},
journal = {Landslides},
keywords = {Landslides,Physical model,Rainfall,Tropical environments},
number = {3},
pages = {497--517},
title = {{SHIA{\_}Landslide: a distributed conceptual and physically based model to forecast the temporal and spatial occurrence of shallow landslides triggered by rainfall in tropical and mountainous basins}},

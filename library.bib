file = {:home/nicolas/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lobligeois et al. - 2014 - When does higher spatial resolution rainfall information improve streamflow simulation An evaluation using 36.pdf:pdf},
issn = {10275606},
journal = {Hydrology and Earth System Sciences},

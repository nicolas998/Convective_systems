issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Infiltration,Model sensitivity,Open source,Soil moisture,TOPKAPI,TRMM rainfall},
pages = {100--112},
publisher = {Elsevier B.V.},
title = {{A sensitivity assessment of the TOPKAPI model with an added infiltration module}},

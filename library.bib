issn = {17941237},
journal = {ANALYSIS OF EMPIRICAL RAINFALL THRESHOLDS FOR THE PROGNOSIS OF LANDSLIDES IN THE ABURR{\'{A}} VALLEY, COLOMBIA. (English)},
number = {15},

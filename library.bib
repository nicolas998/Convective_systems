doi = {10.1016/S0022-1694(97)00030-9},
isbn = {0022-1694},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Alpine basin,Electrical conductivity,Hydrograph separation,Silica concentration,Stable isotopes,Subalpine site},
number = {1-4},
pages = {82--101},
pmid = {20558416},
title = {{Hydrograph separation using stable isotopes, silica and electrical conductivity: An alpine example}},
volume = {201},
year = {1997}
}

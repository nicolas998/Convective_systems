journal = {Journal of Hydrometeorology},
number = {5},
pages = {841--855},
title = {{A Stochastic Model of Radar Measurement Errors in Rainfall Accumulations at Catchment Scale}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/1525-7541{\%}282003{\%}29004{\%}3C0841{\%}3AASMORM{\%}3E2.0.CO{\%}3B2},

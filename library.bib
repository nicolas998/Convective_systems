keywords = {2D hydraulic models,Direct economic losses,Flash floods,Magnitude???damage functions,Mountain villages,Natural hazards},
pages = {611--625},
publisher = {Elsevier B.V.},
title = {{Quantification of flash flood economic risk using ultra-detailed stage???damage functions and 2-D hydraulic models}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2016.02.006},
volume = {541},
